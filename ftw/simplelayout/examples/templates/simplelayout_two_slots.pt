<html xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      metal:use-macro="context/main_template/macros/master"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      i18n:domain="ftw.simplelayout">


    <div metal:fill-slot="content-core">

        <div tal:replace="structure view/sl_page_controls" />

        <div tal:replace="structure python:view.simplelayout_slot()" />

        <div style="height:100px;background-color:lightblue">
            Below is a second indipendent slot, where you can put blocks. <br />
            DO NOT CHANGE THE VIEW TEMPLATE.
        </div>


        <div tal:replace="structure python:view.simplelayout_slot(slot='Slot2')" />


        <script type="text/javascript">

          $(function(){
            $('.simplelayout').simplelayout('init').simplelayout('layout');
          });
        </script>

    </div>
</html>
