<html xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      metal:use-macro="context/main_template/macros/master"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      i18n:domain="ftw.simplelayout">


    <div metal:fill-slot="content-core">

        <div style="height:100px;background-color:lightblue">
            This view aims to be a replacement for the ftw.subsite startpage view.<br />
            4 columns, imagewith at least 1 column, contentwidth 960px
        </div>



        <fieldset class="simplelayout-page-controls" tal:condition="view/can_modify">
            <legend>Simpelayout page controls</legend>
            <a href="#" id="add-block-link">Add Block</a>
            <input type="checkbox" id="auto-block-height" name="auto-block-height" />
            <label i18n:translate="label_auto_height" for="auto-block-height">Enable auto block height</label>
        </fieldset>



        <div tal:replace="structure python:view.simplelayout_slot()" />

        <script type="text/javascript">

          $(function(){
            $('.simplelayout').simplelayout('init').simplelayout('layout');
          });
        </script>

    </div>
</html>
