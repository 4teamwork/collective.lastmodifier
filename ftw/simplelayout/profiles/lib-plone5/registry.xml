<?xml version="1.0"?>
<registry>
  <records interface="ftw.simplelayout.interfaces.ISimplelayoutDefaultSettings" />

  <records prefix="plone.resources/ftw-simplelayout"
           interface='Products.CMFPlone.interfaces.IResourceRegistry'>
    <value key="js">++resource++ftw.simplelayout.client/dist/simplelayout.js</value>
    <value key="deps">jquery</value>
    <value key="css">
      <element>++resource++ftw.simplelayout.client/dist/simplelayout.css</element>
    </value>
  </records>

  <records prefix="plone.resources/ftw-simplelayout-overlay"
           interface='Products.CMFPlone.interfaces.IResourceRegistry'>
    <value key="js">++plone++ftw.simplelayout/Overlay.js</value>
    <value key="deps">jquery</value>
  </records>

  <records prefix="plone.resources/ftw-simplelayout-integration"
           interface='Products.CMFPlone.interfaces.IResourceRegistry'>
    <value key="js">++plone++ftw.simplelayout/main.js</value>
    <value key="deps">jquery</value>
  </records>

	<records prefix="plone.bundles/ftw-simplelayout"
	         interface='Products.CMFPlone.interfaces.IBundleRegistry'>
	  <value key="resources">
	    <element>ftw-simplelayout</element>
      <element>ftw-simplelayout-overlay</element>
      <element>ftw-simplelayout-integration</element>
	  </value>
	  <value key="enabled">True</value>
    <value key="expression">python: member is not None</value>
    <value key="depends">plone-legacy</value>
    <value key="compile">False</value>
    <value key="jscompilation">++plone++ftw.simplelayout/simplelayout-compiled.js</value>
	</records>

</registry>
