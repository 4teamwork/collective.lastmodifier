<html xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      metal:use-macro="context/main_template/macros/master"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      i18n:domain="ftw.simplelayout">


<div metal:fill-slot="head_slot">

</div>

    <div metal:fill-slot="content-core">

        <a href="#" class="add-block-link">Add Block</a>

        <div class="simplelayout" data-simplelayout-config='{"columns": 4}'>
            <tal:blocks repeat="block view/get_blocks">

                <div class="sl-block"
                     tal:attributes="data-uuid block/uuid;
                                     style block/style">

                  <div class="block-wrapper">

                    <span tal:condition="block/editable"
                          class="ui-icon ui-icon-document sl-controls-toggler"><!-- --></span>

                    <div class="block-view-wrapper">
                      <div tal:replace="structure block/view" />
                    </div>

                  </div>

                </div>
            </tal:blocks>

        </div>

        <script type="text/javascript">

          $(function(){
            $('.simplelayout').simplelayout('init').simplelayout('layout');
          });
        </script>

    </div>
</html>
